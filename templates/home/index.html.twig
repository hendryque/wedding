{% block content %}
    <header>
        <h1>Astrid <i class="fas fa-heart"></i> Sander</h1>
    </header>
    <div class="grid-container">
        <div class="collage-container">
            <div class="grid-x grid-margin-x collage">
                <div class="small-6 cell polaroid">
                    <img src="/images/meeting.jpg" />
